<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauiAppHotel.Views"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10">
        <views:HeaderView />
        <Label 
        Text="Hospedagens"
        FontFamily="Kalam"
        FontSize="50"
        TextColor="{StaticResource Primary}"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Frame Padding="10">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                  ColumnDefinitions="*,*,2*">

                    

                </Grid>


                <Label Text="Suíte Super Luxo"
                       TextColor="{StaticResource Primary}"
                       FontFamily="Kalam"
                       FontSize="30"
                       HorizontalTextAlignment="Center"/>        
                              

            </VerticalStackLayout>            

        </Frame>
        <Frame>
            <HorizontalStackLayout>
                <Label Text="Adultos: " />
                <Label Text=" 2"
                       TextColor="{StaticResource Primary}"/>
            </HorizontalStackLayout>
        </Frame>
        <Frame>
            <HorizontalStackLayout>
                <Label Text="Crianças: " />
                <Label Text=" 1"
                       TextColor="{StaticResource Primary}"/>
            </HorizontalStackLayout>
        </Frame>
        <Frame Margin="10">
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia"/>

                <Label Grid.Row="1" Grid.Column="0" Text="27/05/2025"/>
                <Label Grid.Row="1" Grid.Column="1" Text="30/05/2025"/>
                <Label Grid.Row="1" Grid.Column="2" Text="3"/>

            </Grid>                 

        </Frame>
        <Frame>
            <HorizontalStackLayout>
                <Label Text="Valor Toral:"/>
                <Label Text=" R$ 750,00" />
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar" Clicked="Button_Clicked" HorizontalOptions="Center" Margin="10"/>

    </VerticalStackLayout>
</ContentPage>